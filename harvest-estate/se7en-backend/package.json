    "viem": "^2.9.16",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "prisma": "^5.14.0",
    "solc": "^0.8.30",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^1.4.0"
